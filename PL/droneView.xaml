<Window x:Class="PL.droneView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="droneView" Height="450" Width="800">
    <Grid>
        <TextBox HorizontalAlignment="Left" Margin="120,30,0,0" Text="" TextWrapping="Wrap" MaxLength="5" VerticalAlignment="Top" Width="120" AutomationProperties.Name="DroneID"/>
        <Label Content="Drone ID" HorizontalAlignment="Left" Margin="25,25,0,0" VerticalAlignment="Top" Width="90"/>
        <Label Content="Drone model" HorizontalAlignment="Left" Margin="25,56,0,0" VerticalAlignment="Top" Width="90"/>
        <TextBox HorizontalAlignment="Left" Margin="120,60,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <ComboBox x:Name="DroneMaxWeigt"  HorizontalAlignment="Left" Margin="120,93,0,0" VerticalAlignment="Top" Width="120" AutomationProperties.Name="DroneMaxWeight" Height="22"/>
        <Label Content="Max weight" HorizontalAlignment="Left" Margin="25,89,0,0" VerticalAlignment="Top" Width="90" Height="25" RenderTransformOrigin="0.437,1.508"/>
        <Label Content="ID station" HorizontalAlignment="Left" Margin="25,120,0,0" VerticalAlignment="Top" Width="90" Height="25"/>
        <TextBox HorizontalAlignment="Left" Margin="120,123,0,0" MaxLength="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
        <Border BorderThickness="6" BorderBrush="#FF1F8193"/>
    </Grid>
</Window>
