<Window x:Class="PL.droneView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="droneView" Height="450" Width="800">
    <Grid>
        <Grid x:Name="addGrid" Margin="0,0,475,209" Height="225" VerticalAlignment="Bottom">
            <TextBox x:Name="idTxt" HorizontalAlignment="Left" Margin="146,36,0,0" Text="" TextWrapping="Wrap" MaxLength="5" VerticalAlignment="Top" Width="120" AutomationProperties.Name="DroneID"/>
            <Label Content="Drone ID" HorizontalAlignment="Left" Margin="51,31,0,0" VerticalAlignment="Top" Width="90"/>
            <Label Content="Drone model" HorizontalAlignment="Left" Margin="51,62,0,0" VerticalAlignment="Top" Width="90"/>
            <TextBox x:Name="modelTxt" HorizontalAlignment="Left" Margin="146,66,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <ComboBox x:Name="DroneMaxWeigtCmb"  HorizontalAlignment="Left" Margin="146,99,0,0" VerticalAlignment="Top" Width="120" AutomationProperties.Name="DroneMaxWeight" Height="17"/>
            <Label Content="Max weight" HorizontalAlignment="Left" Margin="51,95,0,0" VerticalAlignment="Top" Width="90" Height="31" RenderTransformOrigin="0.437,1.508"/>
            <Label Content="ID station" HorizontalAlignment="Left" Margin="51,126,0,0" VerticalAlignment="Top" Width="90" Height="25"/>
            <TextBox x:Name="idStationTxt" HorizontalAlignment="Left" Margin="146,129,0,0" MaxLength="4" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Button x:Name="addDroneBtn" Content="add drone" HorizontalAlignment="Left" Margin="177,169,0,0" VerticalAlignment="Top" Click="addDroneBtn_Click"/>
            <Button x:Name="cancelBtn" Content="cancel" HorizontalAlignment="Left" Margin="96,169,0,0" VerticalAlignment="Top" Click="cancelBtn_Click"/>
        </Grid>
        <Grid x:Name="updateGrid" Margin="363,0,10,10">
            <Label Content="Drone Id" HorizontalAlignment="Left" Margin="35,20,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="updateIdtxt" HorizontalAlignment="Left" Margin="132,25,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <Label Content="Drone model" HorizontalAlignment="Left" Margin="27,56,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.499,0.814"/>
            <TextBox x:Name="updateModeltxt" HorizontalAlignment="Left" Margin="132,56,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120"/>
            <Label Content="Max weight" HorizontalAlignment="Left" Margin="27,87,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.506,1.97"/>
            <Label Content="status" HorizontalAlignment="Left" Margin="42,118,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.506,1.97"/>
            <Label Content="battery" HorizontalAlignment="Left" Margin="41,156,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="batteryTxt" HorizontalAlignment="Left" Margin="132,160,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <Label Content="parcel in delivery" HorizontalAlignment="Left" Margin="13,186,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="parcelIdTxt" HorizontalAlignment="Left" Margin="132,195,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <Label Content="longitude" HorizontalAlignment="Left" Margin="35,226,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="longitudeTxt" HorizontalAlignment="Left" Margin="132,231,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <Label Content="lattitude" HorizontalAlignment="Left" Margin="35,263,0,0" VerticalAlignment="Top"/>
            <TextBox x:Name="latitudeTxt" HorizontalAlignment="Left" Margin="132,268,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <Button x:Name="updateModelBtn" Content="update model" HorizontalAlignment="Left" Margin="26,307,0,0" VerticalAlignment="Top" Click="updateModel"/>
            <Button x:Name="droneChargeBtn" Content="send drone to charge" HorizontalAlignment="Left" Margin="129,307,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="sendToCharge"/>
            <Button x:Name="relaseBtn" Content="relase drone from charge" HorizontalAlignment="Left" Margin="129,332,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="relaseFromCharge"/>
            <Button x:Name="sendToDeliveryBtn" Content="send drone to delivery" HorizontalAlignment="Left" Margin="289,307,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="sendToDelivery"/>
            <Button x:Name="collectBtn" Content="collect parcel" HorizontalAlignment="Left" Margin="289,332,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="collectParcel"/>
            <Button x:Name="parcelDeliveryBtn" Content="parcel delivery" HorizontalAlignment="Left" Margin="289,357,0,0" VerticalAlignment="Top" Visibility="Hidden" Click="parcelDelivery"/>
            <Button x:Name="closeBtn" Content="close" HorizontalAlignment="Left" Margin="56,347,0,0" VerticalAlignment="Top" Click="closeBtn_Click"/>
            <TextBox x:Name="statusTxt" HorizontalAlignment="Left" Margin="132,122,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <TextBox x:Name="weightTxt" HorizontalAlignment="Left" Margin="132,87,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" IsReadOnly="True"/>
            <Label x:Name="lbl" Content="time in charging" HorizontalAlignment="Left" Margin="107,378,0,0" VerticalAlignment="Top" Visibility="Hidden"/>
            <TextBox x:Name="timeInChargeTxt" HorizontalAlignment="Left" Margin="209,382,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Visibility="Hidden"/>
            <Button x:Name="okBtn" Content="OK" HorizontalAlignment="Left" Margin="350,380,0,0" VerticalAlignment="Top" Click="okBtn_Click" Visibility="Hidden"/>
        </Grid>
    </Grid>
</Window>
