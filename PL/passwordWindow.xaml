<Window x:Class="PL.passwordWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PL"
        mc:Ignorable="d"
        Title="passwordWindow" Height="450" Width="800">
    <Grid>
        <Label x:Name="pa" Content="enter password" HorizontalAlignment="Center" Margin="0,120,0,249" Width="231" FontSize="24"/>
        <PasswordBox x:Name="pas" HorizontalAlignment="Center" Margin="0,200,0,177" Width="222" />
        <Button x:Name="okBtn" Content="O.K" HorizontalAlignment="Center" Margin="0,288,0,80" Width="186" RenderTransformOrigin="0.5,0.5" Click="okBtn_Click">
            <Button.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </Button.RenderTransform>
        </Button>
    </Grid>
</Window>
